<div class="banner-profile" style="background-image: url('https://pro.com/blog/wp-content/uploads/2015/01/bigstock-Bamboo-Background-50435594-e1423768775746.jpg');">
<div class="container">
  <div class="sensei-profile">
      <div class="row">
        <div class="col-xs-6">

          <%= cl_image_tag @sensei.user.photo, height: 400, width: 500, crop: :fill %>
        </div>
        <div class="col-xs-6">
          <h1> Sensei <%= @sensei.user.username %> <i class="fas fa-chalkboard-teacher"></i></h1>
          <h3><%= @sensei.user.email %></h3>
            <% @senseisubs.each do |subject| %>
             |<%= subject.subject.title %>|
            <% end %>
          <h4> Dando aulas desde <%= @sensei.created_at.to_s.split(" ")[0].split("-").reverse.join("/")%> </h4>
          <h5 style="color: gray"><%= @sensei.user.description %></h5>
           <% if @sensei.user == current_user %>
              <%= link_to 'Defina sua disponibilidade para aulas', sensei_agendas_path(@sensei), class: 'btn btn-primary' %>
              <br>
              <%= link_to 'Defina as matÃ©rias que deseja ensinar', sensei_sensei_subjects_path(@sensei), class: 'btn btn-primary' %>
              <br>
              <%= link_to 'Minhas aulas - Sensei', lesson_requests_path("sensei"), class: 'btn btn-primary' %>
            <% else %>
              <%= link_to 'Fazer uma aula agora', new_lesson_request_path(@sensei), class: 'btn btn-primary' %>
           <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
